---
import { getCollection } from "astro:content";
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
const allProjects = await getCollection("projects");
const creative = await getCollection("creativeProjects");
const pageTitle = "Coding Projects";
---
<Layout pageTitle={pageTitle}>
    <div class="gif">
        <img width="300" height="260" alt="Coding Projects Gif" src="/coding.gif"/>
    </div>
    <h2>Computer Graphics Projects</h2>
    <ul role="list" class="link-card-grid">
        {allProjects.map((card) => <Card 
            url={`/projects/${card.slug}/`} 
            image={card.data.image.url} 
            title={card.data.title} 
            body={card.data.description}
        />)}
    </ul>
    <h2>Creative Coding Projects</h2>
    <ul role="list" class="link-card-grid">
        {creative.map((card) => <Card 
            url={`/creativeProjects/${card.slug}/`}  
            image={card.data.image.url} 
            title={card.data.title} 
            body={card.data.description}
        />)}
    </ul>
</Layout>

